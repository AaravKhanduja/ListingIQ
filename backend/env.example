# Environment Configuration
ENVIRONMENT=development  # Set to "production" for production environment

# LLM Configuration
# For Development (defaults to Ollama)
LLM_PROVIDER=ollama  # Optional: explicitly set provider
OLLAMA_MODEL=llama3.2:3b  # Default Ollama model

# For Production (requires OpenAI API key)
# LLM_PROVIDER=openai  # Optional: explicitly set provider
OPENAI_API_KEY=your_openai_api_key_here  # Required for production
OPENAI_MODEL=gpt-4  # OpenAI model to use

# Database Configuration
DATABASE_URL=sqlite:///./local_analyses.db

# CORS Configuration
FRONTEND_ORIGIN=http://localhost:3000

# Production Configuration
DEBUG=true 