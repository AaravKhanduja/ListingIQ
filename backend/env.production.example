# =============================================================================
# ListingIQ Backend PRODUCTION Environment Template
# =============================================================================
# Copy this to .env and configure with your production values

# =============================================================================
# ENVIRONMENT SETTINGS
# =============================================================================
ENVIRONMENT=production
DEBUG=false

# =============================================================================
# LLM CONFIGURATION
# =============================================================================
# Use OpenAI for production (more reliable, better quality)
LLM_PROVIDER=openai
OPENAI_API_KEY=sk-...your_production_openai_key
OPENAI_MODEL=gpt-4

# =============================================================================
# SUPABASE CONFIGURATION (Required for production)
# =============================================================================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=eyJ...your_production_anon_key
SUPABASE_SERVICE_KEY=eyJ...your_production_service_key
SUPABASE_JWT_SECRET=your_production_jwt_secret

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# Use PostgreSQL for production (better performance, reliability)
DATABASE_URL=postgresql://username:password@host:port/database_name

# =============================================================================
# CORS & SECURITY
# =============================================================================
# Your production frontend domain
FRONTEND_ORIGIN=https://yourdomain.com

# Production Security Settings
REQUIRE_HTTPS=true
SECURE_COOKIES=true
SESSION_COOKIE_SECURE=true
CSRF_PROTECTION=true

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60